= simple_form_for :q, url: admin_users_search_path(), method: "POST", html: { class: 'form-inline' } do |f|
  .input-group
    .input-group-field
      = f.input :query, label: false, input_html: { value: "#{@query}", placeholder: 'Search users'}
    .input-group-button
      = f.submit "Search", class: "button small button-search"