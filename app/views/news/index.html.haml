- content_for(:title) { "News" }

#table-wrapper
  %p.text-right.close_link_wrapper
    =link_to settings_path, :class=>'close_link' do
      %i.fi.fi-x
  %p.small
    %a{:href => settings_path, :title => 'Settings'}
      %i.fi-widget.fi-21
      Settings
  %h1 News

  %table
    %thead
      %tr
        %th Title
        %th Body
        %th Published
        %th Map
        %th User
        %th
        %th
        %th

    %tbody
      - @news.each do |news|
        %tr
          %td= news.title
          %td= news.body
          %td= news.published
          %td= # news.maps
          %td= news.user
          %td= link_to 'Show', news
          %td= link_to 'Edit', edit_news_path(news)
          %td= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'New News', new_news_path
