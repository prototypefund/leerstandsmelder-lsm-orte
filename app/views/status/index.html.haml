#table-wrapper
  %p.text-right.close_link_wrapper
    =link_to settings_path, :class=>'close_link' do
      %i.fi.fi-x
  %p.small
    %a{:href => settings_path, :title => 'Settings'}
      %i.fi-widget.fi-21
      Settings
  %h1 Listing status

  %table
    %thead
      %tr
        %th Title
        %th Description
        %th Basic
        %th Map
        %th
        %th
        %th

    %tbody
      - @status.each do |status|
        %tr
          %td= status.title
          %td= status.description
          %td= status.basic
          %td= status.map.title if status.map
          %td= link_to 'Show', status
          %td= link_to 'Edit', edit_status_path(status)
          %td= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' }

  %br

  = link_to 'New Status', new_status_path
